<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Alumnes" table="alumnes">
        <id column="nexp" name="nexp" type="integer">
            <generator class="increment"/>
        </id>
        <property name="nom" column="nom" type="string"/>
        <component name="telefon">
            <property name="telefon" column="telefon" type="integer"/>
        </component>
        <property name="sexe">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">model.Sexe</param>
                <param name="type">-6</param>
            </type>
        </property>
        <property name="datanaix" column="datanaix" type="date"/>
        <property name="susp" column="susp" type="integer"/>
        
        <many-to-one name="grup">
            <column name="grup"/>
        </many-to-one>
        
        <set name="grupos" table="grups" inverse="true" fetch="select">
            <key>
                <column name="delegat" unique="true" />
            </key>
            <one-to-many class="model.Grups" />
        </set>

    </class>
</hibernate-mapping>
